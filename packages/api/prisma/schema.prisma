generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL")
  url = "file:../data.db"
}

model User {
  id        String   @id @default(uuid(7))
  wxid      String?  @unique
  nickname  String?
  addressId String?
  address   Address?
  createAt  DateTime @default(now())
  pets      Pet[]
  avatarId  String?
  avatar    Image?   @relation(fields: [avatarId], references: [id])
}

model Address {
  id       String   @id @default(uuid(7))
  province String?
  city     String?
  area     String?
  detail   String?
  userId   String   @unique
  user     User     @relation(fields: [userId], references: [id])
  createAt DateTime @default(now())
}

model Pet {
  id       String   @id @default(uuid(7))
  nickname String?
  weight   Int?
  age      String?
  images   Image[]
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  createAt DateTime @default(now())
}

model Image {
  id       String   @id @default(uuid(7))
  path     String
  createAt DateTime @default(now())
  User     User[]
  Pet      Pet?     @relation(fields: [petId], references: [id])
  petId    String?
}
